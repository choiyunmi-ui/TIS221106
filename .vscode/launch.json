{
  // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
  // 기존 특성에 대한 설명을 보려면 가리킵니다.
  // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.

  // vsocode 에서 launch 에 단축키 지정하기(assign keyboard shortcuts to launch in vscode :)
  // https://stackoverflow.com/questions/48645098/vscode-keyboard-shortcut-for-launch-configuration

  "version": "0.2.0",
  "compounds": [
    {
      "name": "Launch file and start chrome",
      "configurations": [
        "Execute Current File With NodeJS",
        "Execute Current File With nodemon",
        "JavaScript: Current File",
        "Launch Chrome"
      ],
      "preLaunchTask": "Start server",
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Execute Current File With NodeJS",
      "type": "node",
      "request": "launch",
      "program": "${file}"
    },
    {
      // https://krauser085.github.io/nodemon/
      // https://github.com/remy/nodemon#nodemon
      // https://code.visualstudio.com/docs/nodejs/nodejs-debugging
      "name": "Execute Current File With nodemon",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "JavaScript: Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}"
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5501",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
